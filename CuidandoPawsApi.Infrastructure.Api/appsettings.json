{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "CuidadoPawsDb": "${CUIDANDO_PAWS_DB_CONNECTION}"
  },
  "MailSettings": {
    "EmailFrom": "${MAIL_EMAIL_FROM}",
    "SmtpHost": "${MAIL_SMTP_HOST}",
    "SmtpPort": "${MAIL_SMTP_PORT}",
    "SmtpUser": "${MAIL_SMTP_USER}",
    "SmtpPass": "${MAIL_SMTP_PASS}",
    "DisplayName": "${MAIL_DISPLAY_NAME}"
  },
  "AllowedHosts": "*"
}
